@model List<Publicacion>



<div class="feed-wrap mx-auto">

    @foreach (var item in Model)
    {
        var ts = DateTime.UtcNow - item.FechaSubida.ToUniversalTime();
        string hace = ts.TotalMinutes < 1 ? "recién" :
        ts.TotalHours < 1 ? $"hace {(int)ts.TotalMinutes} min" :
        ts.TotalDays < 1 ? $"hace {(int)ts.TotalHours} h" :
        $"hace {(int)ts.TotalDays} días";

        <div class="card border mb-4 bg-white">

            @* Foto de perfil y opciones *@
            <div class="card-header bg-white border-0 py-3 d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <img alt="User" class="rounded-circle border me-3" height="32" width="32" src="@item.UrlImagen" />
                    <div>
                        <div class="fw-bold small">@item.Usuario.UserName</div>
                    </div>
                </div>

                @if (item.UsuarioId == (string)ViewBag.CurrentUserId)
                {
                    <div class="dropdown">
                        <button class="btn btn-icon" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="material-symbols-outlined">more_vert</span>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark shadow">
                            <li>
                                <form asp-controller="Publicacion" asp-action="Delete" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />

                                    <button type="submit" value="Delete" class="dropdown-item text-danger">
                                        Eliminar
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
            </div>

            @* Contenido de la publicacion *@
            <img alt="Post content" class="post-img card-img-top" src="@item.UrlImagen" />

            @* Funcionalidades de la publicacion *@
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <div class="d-flex gap-3">
                        <form asp-controller="Publicacion" asp-action="Like" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />

                            <button type="submit" class="btn btn-icon p-0">
                                <span class="material-symbols-outlined">favorite</span>
                            </button>

                            <span class="fw-bold small mb-1">@item.Likes.Count</span>
                        </form>

                        <button type="button" class="btn btn-icon"
                                data-bs-toggle="modal"
                                data-bs-target="#PublicacionModal"
                                data-post-id="@item.Id">
                            <span class="material-symbols-outlined">chat_bubble</span>
                            <span class="fw-bold small mb-1">@item.Comentarios.Count</span>
                        </button>

                        <button class="btn btn-icon">
                            <span class="material-symbols-outlined">send</span>
                        </button>
                    </div>

                    <button class="btn btn-icon">
                        <span class="material-symbols-outlined">bookmark</span>
                    </button>
                </div>

                @*Desripcion*@
                <p class="card-text small mb-2">
                    <span class="fw-bold">@item.Usuario.UserName</span> @item.Descripcion
                </p>

                @*Fecha de subida*@
                <div class="text-muted text-uppercase mt-1" style="font-size: 0.65rem;">
                    @hace
                </div>
            </div>
        </div>
    }
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
<style>

    /* Feed más angosto */
    .feed-wrap {
        max-width: 520px; /* bajá a 480 si lo querés más compacto */
    }

        /* Cards un poco más compactas */
        .feed-wrap .card {
            margin-bottom: 1rem !important; /* menos espacio entre posts */
        }

        /* Menos padding en header/body/footer */
        .feed-wrap .card-header {
            padding-top: .5rem !important;
            padding-bottom: .5rem !important;
        }

        .feed-wrap .card-body {
            padding: .75rem !important;
        }

        .feed-wrap .card-footer {
            padding-top: .5rem !important;
            padding-bottom: .5rem !important;
        }

        /* Imagen del post: más contenida */
        .feed-wrap .post-img {
            max-height: 520px; /* ajustá según te guste */
            width: 100%;
            object-fit: cover;
        }

        /* Iconos y textos más chicos */
        .feed-wrap .btn.btn-icon {
            padding: .15rem .25rem !important;
        }

        .feed-wrap .material-symbols-outlined {
            font-size: 20px !important;
        }

        .feed-wrap .card-text {
            font-size: .875rem;
        }

    body {
        background-color: #fafafa;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", "Liberation Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
    }

    .post-img {
        width: 100%;
        aspect-ratio: 1 / 1;
        object-fit: cover;
    }

    .material-symbols-outlined {
        vertical-align: middle;
        font-size: 26px;
    }

    .story-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        border: 2px solid #dee2e6;
        padding: 2px;
        object-fit: cover;
    }

    .card {
        border-radius: 8px;
    }

    .btn-icon {
        padding: 0;
        border: none;
        background: none;
        color: #212529;
    }

        .btn-icon:hover {
            color: #6c757d;
        }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>