@model List<Publicacion>

@{
    var grupos = ViewBag.HistoriasPorUsuario as List<IGrouping<string, Historia>> ?? new();
}


<div class="brand-logo mb-3">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">

                    <div class="d-flex align-items-center justify-content-between mb-3 px-1">
                        <h6 class="text-uppercase fw-bold text-muted mb-0" style="font-size: 12px; letter-spacing: 1px;">Stories</h6>
                        <a class="text-decoration-none fw-bold" href="#" style="font-size: 12px; color: #a413ec;">Watch All</a>
                    </div>

                    <div class="d-flex overflow-auto gap-4 pb-2">
                        @foreach (var g in grupos)
                        {
                            var userId = g.Key;
                            var userName = g.First().Usuario?.UserName;
                            var firstStory = g.First(); // como está ordenado DESC, es la más nueva

                            <button type="button"
                                    class="story-item text-center flex-shrink-0 p-0 border-0 bg-transparent"
                                    data-bs-toggle="modal"
                                    data-bs-target="#HistoriaModal-@userId">
                                <div class="story-ring mb-2">
                                    <div class="story-inner">
                                        <img class="story-avatar" src="~/img/avatar-default.png" alt="avatar" />
                                    </div>
                                </div>
                                <div class="username-label">@userName</div>
                            </button>

                            <!-- Modal por USUARIO -->
                            <div class="modal fade" id="HistoriaModal-@userId" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered modal-xl">
                                    <div class="modal-content bg-dark text-white">
                                        <div class="modal-body p-0">
                                            @await Html.PartialAsync("~/Views/Historia/_Viewer.cshtml", g.ToList())
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="feed-wrap mx-auto">

    @foreach (var item in Model)
    {
        var ts = DateTime.UtcNow - item.FechaSubida.ToUniversalTime();
        string hace = ts.TotalMinutes < 1 ? "recién" :
        ts.TotalHours < 1 ? $"hace {(int)ts.TotalMinutes} min" :
        ts.TotalDays < 1 ? $"hace {(int)ts.TotalHours} h" :
        $"hace {(int)ts.TotalDays} días";

        <div class="card border mb-4 bg-white">

            @* Foto de perfil y opciones *@
            <div class="card-header bg-white border-0 py-3 d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <img alt="User" class="rounded-circle border me-3" height="32" width="32" src="@item.UrlImagen" />
                    <div>
                        <div class="fw-bold small">@item.Usuario.UserName</div>
                    </div>
                </div>

                @if (item.UsuarioId == (string)ViewBag.CurrentUserId)
                {
                    <div class="dropdown">
                        <button class="btn btn-icon" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="material-symbols-outlined">more_vert</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark shadow">
                            <li>
                                <form asp-controller="Publicacion" asp-action="Delete" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />

                                    <button type="submit" value="Delete" class="dropdown-item text-danger">
                                        Eliminar
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
            </div>

            @* Contenido de la publicacion *@
            <img alt="Post content" class="post-img card-img-top" src="@item.UrlImagen" />

            @* Funcionalidades de la publicacion *@
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <div class="d-flex gap-3">
                        <form class="like-form" asp-controller="Publicacion" asp-action="Like" method="post">
                            @Html.AntiForgeryToken()
                            <button type="button" class="btn-like" data-id="@item.Id">
                                <span class="material-symbols-outlined">favorite</span>
                                <span class="like-count" id="like-count-@item.Id">@item.Likes.Count</span>
                            </button>
                        </form>
                        <button type="button" class="btn btn-icon"
                                data-bs-toggle="modal"
                                data-bs-target="#PublicacionModal"
                                data-post-id="@item.Id">
                            <span class="material-symbols-outlined">chat_bubble</span>
                            <span class="fw-bold small mb-1">@item.Comentarios.Count</span>
                        </button>
                    </div>
                </div>

                @*Desripcion*@
                <p class="card-text small mb-2">
                    <span class="fw-bold">@item.Usuario.UserName</span> @item.Descripcion
                </p>

                @*Fecha de subida*@
                <div class="text-muted text-uppercase mt-1" style="font-size: 0.65rem;">
                    @hace
                </div>
            </div>
        </div>
    }
</div>


