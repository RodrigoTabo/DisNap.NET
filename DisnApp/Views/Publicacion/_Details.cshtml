@model DisnApp.Models.Publicacion

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* Look & feel tipo Instagram */
    .modal-content-instagram {
        border: 0;
        border-radius: 14px;
        overflow: hidden;
    }

    .post-image-container {
        background: #000;
    }

    .post-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    /* Avatares */
    .avatar-lg {
        width: 44px;
        height: 44px;
        object-fit: cover;
    }

    .avatar-sm {
        width: 34px;
        height: 34px;
        object-fit: cover;
    }

    /* Comentarios scrolleables */
    .comment-scroll {
        scrollbar-width: thin;
    }

    /* Icons interacción */
    .interaction-icons i {
        font-size: 1.25rem;
        cursor: pointer;
    }

    .interaction-icons .left i {
        margin-right: .9rem;
    }

    /* Input sin borde feo */
    .no-border-focus:focus {
        box-shadow: none;
    }

    .username-link {
        color: inherit;
        text-decoration: none;
    }

        .username-link:hover {
            text-decoration: underline;
        }

    .btn-link-post {
        text-decoration: none;
        font-weight: 600;
    }
</style>


<div class="modal-body p-0 ig-modal-body">
    <div class="row g-0 h-100">

        <!-- Imagen -->
        <div class="col-lg-8 post-image-container h-100 d-flex align-items-center justify-content-center">
            <img src="@Model.UrlImagen" class="post-image" alt="Post content" />
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4 bg-white d-flex flex-column h-100">

            <!-- Header -->
            <div class="p-3 border-bottom d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <img src="@Model.Usuario?"
                         class="rounded-circle avatar-lg me-3"
                         alt="Profile"
                         onerror="this.style.display='none';" />
                    <div>
                        <span class="fw-bold d-block small">@Model.Usuario?.UserName</span>
                        <span class="text-muted small">@Model.FechaSubida.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                </div>

                <div class="d-flex align-items-center gap-2">
                    <a href="#" class="text-primary fw-bold small text-decoration-none">Follow</a>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>

            <!-- Comentarios -->
            <div class="flex-grow-1 overflow-auto comment-scroll p-3">

                @* Descripción del post como “primer comentario” *@
                @if (!string.IsNullOrWhiteSpace(Model.Descripcion))
                {
                    <div class="d-flex mb-4">
                        <img src="@Model.Usuario?"
                             class="rounded-circle avatar-sm me-3 mt-1"
                             alt="Profile"
                             onerror="this.style.display='none';" />
                        <div>
                            <p class="small mb-1">
                                <span class="fw-bold">@Model.Usuario?.UserName</span>
                                @Model.Descripcion
                            </p>
                        </div>
                    </div>
                }

                @* Comentarios reales *@
                @if (Model.Comentarios != null && Model.Comentarios.Any())
                {
                    @foreach (var c in Model.Comentarios.OrderByDescending(x => x.FechaComentario))
                    {
                        <div class="d-flex mb-3 justify-content-between gap-3">
                            <div class="d-flex">
                                <img src="@c.Usuario?"
                                     class="rounded-circle avatar-sm me-3 mt-1"
                                     alt="Profile"
                                     onerror="this.style.display='none';" />
                                <div>
                                    <p class="small mb-1">
                                        <span class="fw-bold">@c.Usuario?.UserName</span>
                                        @c.Contenido
                                    </p>
                                    <div class="d-flex align-items-center gap-3">
                                        <span class="text-muted small">
                                            @c.FechaComentario.ToString("dd/MM HH:mm")
                                        </span>
                                        <span class="text-muted small fw-bold" style="cursor:pointer">Reply</span>
                                    </div>
                                </div>
                            </div>
                            <i class="bi bi-heart small text-muted align-self-start"></i>
                        </div>
                    }
                }
                else
                {
                    <div class="text-muted small">Todavía no hay comentarios.</div>
                }

            </div>

            <!-- Interacciones -->
            <div class="p-3 border-top">
                <div class="d-flex justify-content-between align-items-center mb-2 interaction-icons">
                    <div class="left d-flex align-items-center">
                        <i class="bi bi-heart"></i>
                        <i class="bi bi-chat"></i>
                        <i class="bi bi-send"></i>
                    </div>
                    <i class="bi bi-bookmark"></i>
                </div>

                <p class="small fw-bold mb-1">
                    @((Model.Likes?.Count ?? 0).ToString()) likes
                </p>

                <p class="text-muted small text-uppercase mb-0" style="font-size:10px; letter-spacing:.5px;">
                    @Model.FechaSubida.ToString("MMMM dd")
                </p>
            </div>

            <!-- Input comentario -->
            <div class="p-2 border-top">
                <form class="d-flex align-items-center gap-1"
                      asp-controller="Comentario"
                      asp-action="Crear"
                      method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="publicacionId" value="@Model.Id" />

                    <button class="btn btn-link text-dark p-2" type="button" aria-label="Emoji">
                        <i class="bi bi-emoji-smile fs-5"></i>
                    </button>

                    <input class="form-control border-0 no-border-focus small"
                           name="contenido"
                           type="text"
                           placeholder="Add a comment..." />

                    <button class="btn btn-link btn-link-post text-primary small" type="submit">
                        Post
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>