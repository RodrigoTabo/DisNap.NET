@model DisnApp.Models.Publicacion

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .modal-content-instagram {
        border: 0;
        border-radius: 14px;
        overflow: hidden;
    }

    .post-image-container {
        background: #000;
    }

    .post-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .avatar-lg {
        width: 44px;
        height: 44px;
        object-fit: cover;
    }

    .avatar-sm {
        width: 34px;
        height: 34px;
        object-fit: cover;
    }

    /* Icons interacción */
    .interaction-icons i {
        font-size: 1.25rem;
        cursor: pointer;
    }

    .interaction-icons .left i {
        margin-right: .9rem;
    }

    /* Input sin borde feo */
    .no-border-focus:focus {
        box-shadow: none;
    }

    .username-link {
        color: inherit;
        text-decoration: none;
    }

        .username-link:hover {
            text-decoration: underline;
        }

    .btn-link-post {
        text-decoration: none;
        font-weight: 600;
    }

    /* ✅ 1) El modal NO crece: queda dentro del viewport */
    .modal-content-instagram {
        height: 90vh; /* clave */
        max-height: 90vh; /* clave */
        overflow: hidden; /* clave */
    }

    /* ✅ 2) El body interno ocupa todo el alto del modal */
    .ig-modal-body {
        height: 100%;
    }

        /* ✅ 3) La row también tiene que estirarse */
        .ig-modal-body .row {
            height: 100%;
        }

        /* ✅ 4) Flexbox fix: permite que el scroll funcione sin agrandar el modal */
        .ig-modal-body .col-lg-4 {
            min-height: 0; /* CLAVE */
        }

    .comment-scroll {
        overflow-y: auto;
        min-height: 0;
    }

    .post-image {
        width: 100%;
        height: 100%;
        object-fit: contain; /* si querés que NO recorte */
        display: block;
    }
</style>


<div class="modal-body p-0 ig-modal-body modal-content modal-content-instagram">
    <div class="row g-0 h-100">

        <!-- Imagen -->
        <div class="col-lg-8 post-image-container h-100 d-flex align-items-center justify-content-center">
            <img src="@Model.UrlImagen" class="post-image" alt="Post content" />
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4 bg-white d-flex flex-column h-100">

            <!-- Header -->
            <div class="p-3 border-bottom d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <img src="~/img/avatar-default.png"
                         class="rounded-circle avatar-sm me-3 mt-1"
                         alt="Profile"
                         onerror="this.style.display='none';" />
                    <div>
                        <span class="fw-bold d-block small">@Model.UsuarioId</span>
                        <span class="text-muted small">@Model.FechaSubida.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                </div>

                <div class="d-flex align-items-center gap-2">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>

            <!-- Comentarios -->
            <div class="p-3 border-bottom d-flex align-items-center justify-content-between">
                @* Descripción del post como “primer comentario” *@
                @if (!string.IsNullOrWhiteSpace(Model.Descripcion))
                {
                    <div class="d-flex mb-4">
                        <img src="~/img/avatar-default.png"
                             class="rounded-circle avatar-sm me-3 mt-1" s
                             alt="Profile"
                             onerror="this.style.display='none';" />
                        <div>
                            <p class="small mb-1">
                                <span class="fw-bold">Descripcion: </span>
                                @Model.Descripcion
                            </p>
                        </div>
                    </div>
                }
            </div>

            <div class="flex-grow-1 overflow-auto p-3">
                @* Comentarios reales *@
                @if (Model.Comentarios != null && Model.Comentarios.Any())
                {
                    <!-- Comentarios -->
                    <div id="commentsList">
                        @await Html.PartialAsync("_CommentsList", Model.Comentarios)
                    </div>

                }
                else
                {
                    <div class="text-muted small">Todavía no hay comentarios.</div>
                }
            </div>

            <!-- Interacciones -->
            <div class="p-3 border-top">
                <div class="d-flex justify-content-between align-items-center mb-2 interaction-icons">
                    <div class="left d-flex align-items-center">
                        <form class="like-form" asp-controller="Publicacion" asp-action="Like" method="post">
                            @Html.AntiForgeryToken()
                            <button type="button" class="btn-like" data-id="@Model.Id">
                                <span class="material-symbols-outlined">favorite</span>
                                <span class="like-count" id="like-count-@Model.Id">@Model.Likes.Count</span>
                            </button>
                        </form>
                        <span class="material-symbols-outlined">chat_bubble</span>
                        <span class="fw-bold small mb-1">@Model.Comentarios.Count</span>
                    </div>
                </div>
                <p class="text-muted small text-uppercase mb-0" style="font-size:10px; letter-spacing:.5px;">
                    @Model.FechaSubida.ToString("MMMM dd")
                </p>
            </div>

            <!-- Input comentario -->
            <div class="p-2 border-top">
                <form class="d-flex align-items-center gap-1 js-comentario-form" asp-controller="Publicacion" asp-action="Comentar" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input class="form-control border-0 no-border-focus small" name="contenido" type="text" placeholder="Add a comment..." />
                    <button class="btn btn-link btn-link-post text-primary small" type="submit">
                        Post
                    </button>

                </form>
            </div>

        </div>
    </div>
</div>
