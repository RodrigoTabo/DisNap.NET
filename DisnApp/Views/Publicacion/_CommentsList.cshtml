@model List<Comentario>

@* Comentarios reales *@
@if (Model != null && Model.Any())
{
    @foreach (var c in Model.OrderByDescending(x => x.FechaComentario))
    {
        <div class="d-flex mb-3 justify-content-between gap-3">
            <div class="d-flex">
                <img src="~/img/avatar-default.png"
                     class="rounded-circle avatar-sm me-3 mt-1"
                     alt="Profile"
                     onerror="this.style.display='none';" />
                <div>
                    <p class="small mb-1">
                        <span class="fw-bold">@c.UsuarioId</span>
                        @c.Contenido
                    </p>
                    <div class="d-flex align-items-center gap-3">
                        <span class="text-muted small">
                            @c.FechaComentario.ToString("dd/MM HH:mm")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="text-muted small">Todavía no hay comentarios.</div>
}
