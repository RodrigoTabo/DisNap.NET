<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DisnApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/DisnApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-end box-shadow sidebar d-flex flex-column vh-100 p-3"
             style="position:fixed; top:0; left:0; width:260px; height:100vh; z-index:1020; overflow-y:auto; border-bottom:0;">

            <div class="container-fluid flex-column align-items-stretch p-0 h-100">

                <!-- BRAND -->
                <div class="brand-logo mb-3">
                    <a class="navbar-brand m-0" asp-area="" asp-controller="Home" asp-action="Index">DisnApp</a>
                    <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <!-- NAV -->
                <div class="navbar-collapse collapse d-sm-flex flex-column flex-grow-1">
                    <ul class="navbar-nav nav nav-pills flex-column flex-grow-1 gap-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark sidebar-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="material-symbols-outlined">home</span>
                                <span class="nav-text">Home</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <button type="button" class="btn btn-link nav-link text-dark sidebar-link"
                                    data-bs-toggle="offcanvas" data-bs-target="#SearchOffcanvas" aria-controls="SearchOffcanvas">
                                <span class="material-symbols-outlined">search</span>
                                <span class="nav-text">Buscar</span>
                            </button>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark sidebar-link" asp-area="" asp-controller="Usuario" asp-action="Conversacion">
                                <span class="material-symbols-outlined">chat_bubble</span>
                                <span class="nav-text">Mensajes</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn btn-link nav-link text-dark sidebar-link" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="material-symbols-outlined">add_box</span>
                                    <span class="nav-text">Crear</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <button type="button" class="btn btn-primary sidebar-btn" data-bs-toggle="modal" data-bs-target="#crearPublicacionModal">
                                            <span class="material-symbols-outlined">add_box</span>
                                            <span class="nav-text">publicación</span>
                                        </button>
                                    </li>
                                    <li>
                                        <button type="button" class="btn btn-primary sidebar-btn" data-bs-toggle="modal" data-bs-target="#crearHistoriaModal">
                                            <span class="material-symbols-outlined">add_circle</span>
                                            <span class="nav-text">historia</span>
                                        </button>
                                    </li>

                                </ul>
                            </div>
                        </li>

                        <li class="nav-item">
                            <partial name="_LoginPartial"></partial>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>

        <partial name="~/Views/Publicacion/_Create.cshtml" model="new DisnApp.ViewModel.CrearPublicacionVM()" />
        <partial name="~/Views/Historia/_Create.cshtml" model="new DisnApp.ViewModel.CrearHistoriaVM()" />

        <div class="offcanvas offcanvas-start" tabindex="-1" id="SearchOffcanvas" aria-labelledby="SearchOffcanvasLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="SearchOffcanvasLabel">Buscar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>

            <div class="offcanvas-body">
                <input id="userSearchInput" class="form-control" placeholder="Buscar usuarios..." autocomplete="off" />
                <div id="userSearchResults" class="mt-3">
                    <div class="text-muted small">Escribí para buscar…</div>
                </div>
            </div>
        </div>


        <!-- Modal contenedor (vacío) -->
        <div class="modal fade" id="PublicacionModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <div class="modal-content modal-content-instagram shadow-lg" id="PublicacionModalContent">
                    <div class="p-4 text-center">Cargando...</div>
                </div>
            </div>
        </div>

        <!-- Modal historias -->
        <div class="modal fade" id="HistoriaModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-fullscreen">
                <div class="modal-content bg-dark text-white">
                    <div id="HistoriaModalContent" class="p-3">Cargando...</div>
                </div>
            </div>
        </div>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/search.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/publicacion.js" asp-append-version="true"></script>
    <script src="~/js/mensaje.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <div class="brand-logo mb-3">
        <footer class="footer text-center">
            <div class="container">
                &copy; 2026 - DisnApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
</body>


</html>
