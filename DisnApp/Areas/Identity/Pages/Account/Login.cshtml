@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">

            <div class="card shadow-sm">
                <div class="card-body p-4">

                    <div class="text-center mb-4">
                        <h3 class="mb-0 fw-bold">DisnApp</h3>
                        <div class="text-muted small">Iniciá sesión para continuar</div>
                    </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                        <div class="mb-3">
                            <input asp-for="Input.Login"
                                   class="form-control"
                                   autocomplete="username"
                                   placeholder="Usuario o email" />
                            <span asp-validation-for="Input.Login" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="Input.Password"
                                   class="form-control"
                                   autocomplete="current-password"
                                   placeholder="Contraseña" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100">
                            Iniciar sesión
                        </button>
                    </form>
                </div>
            </div>

            <div class="card mt-3 shadow-sm">
                <div class="card-body text-center py-3">
                    <span class="me-1">¿No estás registrado?</span>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-semibold text-decoration-none">
                        Registrate
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
